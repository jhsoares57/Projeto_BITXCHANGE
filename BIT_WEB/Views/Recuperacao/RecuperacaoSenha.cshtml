@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@Styles.Render("~/Content/transaction.css")

<div class="login-content">
    <div class="login-text">
        <strong>
            <p>Esqueceu sua senha?</p>
        </strong>
        <p>Não possui uma conta? <strong><a href="../Cadastro/index.html"> Cadastre-se</a></strong></p>
    </div>

    <form action="RecuperarSenha">
        @if (TempData["UsuarioAlterado"] != null)
        {
            <link href="~/Scripts/bulma/css/bulma.css" rel="stylesheet" />
            <div class="notification is-success">
                <p size="3" align="center"><b>@TempData["UsuarioAlterado"]</b></p>
            </div>
        }
        @if (TempData["UsuarioNaoAletarado"] != null)
        {
            <link href="~/Scripts/bulma/css/bulma.css" rel="stylesheet" />
            <div class="notification is-danger">
                <p size="3" align="center"><b>@TempData["UsuarioNaoAletarado"]</b></p>
            </div>
        }
        @if (TempData["UsuarioErro"] != null)
        {
            <link href="~/Scripts/bulma/css/bulma.css" rel="stylesheet" />
            <div class="notification is-danger">
                <p size="3" align="center"><b>@TempData["UsuarioErro"]</b></p>
            </div>
        }
        <div class="input-block">
            <fieldset>
                <label for="email"></label>
                <input type="text" name="email" class="input-text" id="email" placeholder="E-mail">
            </fieldset>
        </div>
        <div class="input-block">
            <fieldset>
                <label for="nova-senha"></label>
                <input type="new-password" name="nova-senha" class="input-text" id="nova-senha" placeholder="Nova senha">
            </fieldset>
        </div>
        <div class="input-block">
            <fieldset>
                <label for="conf-senha"></label>
                <input type="conf-password" name="conf-senha" class="input-text" id="conf-senha" placeholder="Confirme a nova senha">
            </fieldset>
        </div>
        <div class="bottom-content">
            <button type="submit">Alterar</button>
        </div>
    </form>
</div>